<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="?android:selectableItemBackground"
    android:gravity="center_vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="55dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBeaconImage"
            android:layout_width="300dp"
            android:layout_height="300dp"

            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:elevation="2dp"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/pubTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="Beer Gal"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/beer1Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="Hokus (Pinta)"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Alcohol:"
                android:textColor="@android:color/holo_blue_dark"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>

            <TextView
                android:id="@+id/beer1alc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="kotek"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Rate Beer rating:"
                android:textColor="@android:color/holo_blue_dark"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>

            <TextView
                android:id="@+id/beer1rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rbf"
                android:layout_margin="2dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>
                </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Type:"
                android:textColor="@android:color/holo_blue_dark"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>

            <TextView
                android:id="@+id/beer1type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="typel"
                android:layout_margin="2dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>


        </LinearLayout>

        <TextView
            android:id="@+id/beer2Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginTop="20dp"
            android:text="Hokus (Pinta)"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Alcohol:"
                android:textColor="@android:color/holo_blue_dark"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>

            <TextView
                android:id="@+id/beer2alc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="kotek"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Rate Beer rating:"
                android:textColor="@android:color/holo_blue_dark"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>

            <TextView
                android:id="@+id/beer2rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rbf"
                android:layout_margin="2dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Type:"
                android:textColor="@android:color/holo_blue_dark"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>

            <TextView
                android:id="@+id/beer2type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="typel"
                android:layout_margin="2dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout><!-- From: file:/C:/Users/rr196081/Desktop/TapPoint%20SDK%20v2.0.0/TapPoint%20SDK%20v2.0.0/android-studio-sdk-ref-app/app/src/main/res/layout/adapter_beacon_event.xml -->